# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs

root = true

# Global settings, apply to all files unless overridden by specific sections
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# Specific configuration for HTML files
[*.html]
indent_style = space
indent_size = 2

# Specific configuration for CSS, SCSS, and Less files
[*.css]
indent_style = space
indent_size = 2

# Specific configuration for JavaScript and TypeScript files
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

# Specific configuration for JSON files
[*.json]
indent_style = space
indent_size = 2

# Specific configuration for Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Keep trailing whitespace for formatting

# Specific configuration for YAML files
[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
